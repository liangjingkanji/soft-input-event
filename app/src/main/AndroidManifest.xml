<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drake.softinput.example">

    <application
        android:name="com.drake.softinput.example.base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SoftInput">
        <activity
            android:name="com.drake.softinput.example.ui.activity.SampleDialogActivity"
            android:exported="false" />
        <activity
            android:name="com.drake.softinput.example.ui.activity.SampleFragmentActivity"
            android:exported="false" />
        <activity
            android:name="com.drake.softinput.example.ui.activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>